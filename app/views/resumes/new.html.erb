<div class="container" style="margin-top: 10%;margin-bottom: 10%;max-width: 720px;">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center" style="color: black;">Upload resume to <%= @job.title %></h1>
		</div>
	</div>
	<div class="panel panel-default" 	>
		
		<div class="panel-body">
			<div class="trix-content">
				<%= simple_form_for [@job, @resume] do |f| %>
				<%= f.input :content %>
			</div>
			
		</div>
		<div class="panel-footer">
			
			<div class="row">
				<div class="col-md-6" >
					<%= f.input :attachment%>
					
				</div>
				<div class="col-md-6"><%= f.submit "Send" ,:class => "btn-danger btn" ,:style=>"margin-left: 50%; margin-top:20px;"%></div>
				
			</div>
			
			
			<% end %>
			
		</div>
	</div>
</div>